{
  "name": "ts-mocaha-chai-nyc",
  "version": "1.0.0",
  "description": "An example using Mocha and Chai with NYC coverage for TypeScript",
  "scripts": {
    "test": "nyc mocha src/**/*.spec.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "author": "John Cheesman",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "chai": "^4.0.2",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "source-map-support": "^0.4.15",
    "ts-node": "^3.1.0",
    "typescript": "^2.9.2"
  }
}
